@using Microsoft.AspNetCore.Identity.EntityFrameworkCore

@model IEnumerable<IdentityRole>

<h2>Rollen beheer</h2>

@if (!Model.Any())
{
    <tr><td colspan="3" class="text-center">Nog geen rollen gedefinieerd. Maak eerst een rol.</td></tr>
}
else
{
    <table class="table table-condensed table-bordered">
        <tr>
            @*<th>Role ID</th>*@
            <th style="width: 80%">Rolnaam</th>
            <th style="width: 20%"></th>
        </tr>
        @foreach (var role in Model)
        {
            <tr>
                @*<td>@role.Id</td>*@
                <td>@role.Name</td>
                <td>
                    <form asp-action="DeleteRole" asp-route-id="@role.Id" method="post">
                        <a class="btn btn-sm btn-primary" asp-action="EditRole" asp-route-id="@role.Id">Wijzigen</a>
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Weet u zeker dat u deze rol wilt verwijderen?');">
                            Verwijderen
                        </button>
                    </form>
                </td>
            </tr>
        }
    </table>
}
<p>
    <a class="btn btn-primary" asp-action="AddNewRole">Voeg nieuwe rol toe</a>
</p>
