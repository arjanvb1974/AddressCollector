@model AddRoleViewModel

    <h2>Creëer een nieuwe gebruiker</h2>

<form asp-controller="Admin" asp-action="AddNewRole" method="post" class="form-horizontal" role="form">
    <h4>Voer hieronder de roldetails in</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="RoleName" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Maak rol" />
            <a asp-action="RoleManagement" class="btn btn-primary">Annuleren</a>
        </div>
    </div>
</form>
