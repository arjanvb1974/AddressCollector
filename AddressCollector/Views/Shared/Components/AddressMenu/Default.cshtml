@model IEnumerable<AddressCollector.Components.AddressMenuItem>

<li class="dropdown">
    <a asp-controller="Address" asp-action="Index"
       class="dropdown-toggle" data-toggle="dropdown">Adressen<b class="caret"></b></a>
    <ul class="dropdown-menu">
        @foreach (var menuItem in Model)
        {
            <li>
                <a asp-controller="Address" asp-action=@menuItem.ActionValue >@menuItem.DisplayValue</a>
            </li>
        }
    </ul>
</li>