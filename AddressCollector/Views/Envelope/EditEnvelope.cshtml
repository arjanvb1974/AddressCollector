@model EnvelopeViewModel
@using Microsoft.AspNetCore.Mvc.Rendering;
<h2>Wijzig envelop</h2>

<form asp-controller="Envelope" asp-action="EditEnvelope" method="post" class="form-horizontal" role="form">
    <h4>U kunt de onderstaande gegevens wijzigen</h4>
    <hr />
    
    @Html.HiddenFor(x => x.OndernemerId)
    
    <partial name="_envelopeFields" />
    
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" class="btn btn-primary" value="Opslaan" />
            <a asp-action="EnvelopeManagement" class="btn btn-primary">Annuleren</a>
        </div>
    </div>
</form>

