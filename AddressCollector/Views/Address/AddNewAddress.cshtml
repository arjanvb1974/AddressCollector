@model AddressViewModel

<h2>Voer nieuw adres in</h2>

<form asp-controller="Address" asp-action="AddNewAddress" method="post" class="form-horizontal" role="form">
    <h4>Vul hieronder de details in</h4>
    <hr />
    
    @Html.HiddenFor(x => x.KlantId)
    @Html.HiddenFor(x => x.OnderNemerId)
    @Html.HiddenFor(x => x.Next)

    <partial name="_addressFields"/>

    <div class="form-group">
        <div class="hidden-xs col-md-12">
            <input type="submit" class="btn btn-primary" id="Save" value="Opslaan" title="Opslaan" />
            <input type="submit" class="btn btn-primary btn-mobile" id="SaveAndNext" value="Opslaan en volgende" title="Opslaan en volgende" />
            <a asp-action="AddressManagement" class="btn btn-primary">Annuleren</a>
        </div>
        <div class="visible-xs col-xs-12">
            <input type="submit" class="btn btn-primary btn-mobile" id="Save" value="Opslaan" title="Opslaan" />
        </div>
        <div class="visible-xs col-xs-12">
            <input type="submit" class="btn btn-primary btn-mobile" id="SaveAndNext" value="Opslaan en volgende" title="Opslaan en volgende" />
        </div>
        <div class="visible-xs col-xs-12">
            <a asp-action="AddressManagement" class="btn btn-primary btn-mobile">Annuleren</a>
        </div>
    </div>
</form>
<script type="text/javascript">
    $("#SaveAndNext").on("click", function () {
        $('input[name=Next]').val('true');
    });
    $("#Save").on("click", function () {
        $('input[name=Next]').val('false');
    });
</script>

